<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Osr2PlusPlugin.Controls">

    <!-- ═══════════════════════════════════════════════════════
         RangeSlider Default Template
         ═══════════════════════════════════════════════════════ -->
    <Style TargetType="{x:Type controls:RangeSlider}">
        <Setter Property="Height" Value="20" />
        <Setter Property="MinWidth" Value="40" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:RangeSlider}">
                    <Canvas x:Name="PART_TrackCanvas"
                            Background="Transparent"
                            ClipToBounds="False">

                        <!-- Track background — full width -->
                        <Rectangle x:Name="PART_TrackBackground"
                                   Fill="#3C3C3C"
                                   RadiusX="1.5" RadiusY="1.5" />

                        <!-- Selected range fill — between thumbs -->
                        <Rectangle x:Name="PART_TrackFill"
                                   Fill="{TemplateBinding TrackColor}"
                                   RadiusX="1.5" RadiusY="1.5" />

                        <!-- Min thumb -->
                        <Ellipse x:Name="PART_MinThumb"
                                 Width="14" Height="14"
                                 Fill="#CCCCCC"
                                 Stroke="Transparent" StrokeThickness="1.5"
                                 Cursor="Hand" />

                        <!-- Max thumb -->
                        <Ellipse x:Name="PART_MaxThumb"
                                 Width="14" Height="14"
                                 Fill="#CCCCCC"
                                 Stroke="Transparent" StrokeThickness="1.5"
                                 Cursor="Hand" />
                    </Canvas>

                    <ControlTemplate.Triggers>
                        <Trigger SourceName="PART_MinThumb" Property="IsMouseOver" Value="True">
                            <Setter TargetName="PART_MinThumb" Property="Stroke" Value="#007ACC" />
                        </Trigger>
                        <Trigger SourceName="PART_MaxThumb" Property="IsMouseOver" Value="True">
                            <Setter TargetName="PART_MaxThumb" Property="Stroke" Value="#007ACC" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
