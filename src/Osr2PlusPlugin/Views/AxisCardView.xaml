<UserControl x:Class="Osr2PlusPlugin.Views.AxisCardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Osr2PlusPlugin.Controls"
             xmlns:converters="clr-namespace:Osr2PlusPlugin.Converters">

    <!-- DataContext is expected to be AxisCardViewModel -->

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:BoolToVisibilityConverter x:Key="BoolToVisibility" />
            <converters:HexToBrushConverter x:Key="HexToBrush" />
            <converters:HexToLowOpacityBrushConverter x:Key="HexToLowOpacityBrush" />
            <converters:FillModeDisplayConverter x:Key="FillModeDisplay" />
        </ResourceDictionary>
    </UserControl.Resources>

    <!-- Card Container: rounded corners, colored left stripe -->
    <Border CornerRadius="4"
            Background="{StaticResource CardBackgroundBrush}"
            BorderBrush="{StaticResource CardBorderBrush}"
            BorderThickness="1"
            Margin="0,3"
            SnapsToDevicePixels="True"
            ClipToBounds="True">
        <Grid>
            <!-- Axis color accent stripe on left edge -->
            <Border Width="4" HorizontalAlignment="Left"
                    Background="{Binding AxisColor, Converter={StaticResource HexToBrush}}"
                    CornerRadius="4,0,0,4" />

            <StackPanel Margin="12,8,8,8">

                <!-- ════════════════════════════════════════════
                     COLLAPSED HEADER
                     ════════════════════════════════════════════ -->
                <Grid Cursor="Hand">
                    <Grid.InputBindings>
                        <MouseBinding MouseAction="LeftClick"
                                      Command="{Binding ToggleExpandCommand}" />
                    </Grid.InputBindings>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />  <!-- Chevron -->
                        <ColumnDefinition Width="Auto" />  <!-- Name -->
                        <ColumnDefinition Width="Auto" />  <!-- Axis badge -->
                        <ColumnDefinition Width="Auto" />  <!-- Range badge -->
                        <ColumnDefinition Width="*" />     <!-- spacer -->
                        <ColumnDefinition Width="Auto" />  <!-- Enable toggle -->
                    </Grid.ColumnDefinitions>

                    <!-- Expand/Collapse Chevron -->
                    <ToggleButton Grid.Column="0"
                                  Style="{StaticResource Osr2ChevronStyle}"
                                  IsChecked="{Binding IsExpanded}"
                                  VerticalAlignment="Center"
                                  Margin="0,0,8,0" />

                    <!-- Axis Name -->
                    <TextBlock Grid.Column="1"
                               Text="{Binding AxisName}"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               FontFamily="Segoe UI" FontSize="14" FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0" />

                    <!-- Axis Badge (e.g. L0) -->
                    <Border Grid.Column="2"
                            Background="{Binding AxisColor, Converter={StaticResource HexToLowOpacityBrush}}"
                            CornerRadius="3"
                            Padding="6,2"
                            Margin="0,0,6,0"
                            VerticalAlignment="Center">
                        <TextBlock Text="{Binding AxisId}"
                                   Foreground="{Binding AxisColor, Converter={StaticResource HexToBrush}}"
                                   FontFamily="Segoe UI" FontSize="11" FontWeight="Bold" />
                    </Border>

                    <!-- Range Badge (e.g. 0-100) -->
                    <Border Grid.Column="3"
                            Background="#2D2D2D"
                            CornerRadius="3"
                            Padding="6,2"
                            VerticalAlignment="Center">
                        <TextBlock Text="{Binding RangeLabel}"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   FontFamily="Segoe UI" FontSize="11" />
                    </Border>

                    <!-- Enable Toggle -->
                    <CheckBox Grid.Column="5"
                              Style="{StaticResource Osr2ToggleSwitchStyle}"
                              IsChecked="{Binding Enabled}"
                              VerticalAlignment="Center" />
                </Grid>

                <!-- ════════════════════════════════════════════
                     EXPANDED CONTENT
                     ════════════════════════════════════════════ -->
                <StackPanel Visibility="{Binding IsExpanded, Converter={StaticResource BoolToVisibility}}"
                            Margin="0,8,0,0">

                    <!-- ── 1. Range Section ──────────────────── -->
                    <TextBlock Text="Range"
                               Foreground="White"
                               FontFamily="Segoe UI" FontSize="12" FontWeight="SemiBold"
                               Margin="0,0,0,4" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="60" />
                        </Grid.ColumnDefinitions>

                        <controls:RangeSlider Grid.Column="0"
                                              Minimum="0" Maximum="100"
                                              MinValue="{Binding Min, Mode=TwoWay}"
                                              MaxValue="{Binding Max, Mode=TwoWay}"
                                              TrackColor="{Binding AxisColor, Converter={StaticResource HexToBrush}}"
                                              Height="24"
                                              VerticalAlignment="Center" />

                        <TextBlock Grid.Column="1"
                                   Text="{Binding RangeLabel}"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontFamily="Segoe UI" FontSize="11"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center" />
                    </Grid>

                    <!-- ── 2. Fill Mode Section (not shown for Stroke) ── -->
                    <StackPanel Visibility="{Binding ShowFillMode, Converter={StaticResource BoolToVisibility}}">
                        <TextBlock Text="Fill Mode"
                                   Foreground="White"
                                   FontFamily="Segoe UI" FontSize="12" FontWeight="SemiBold"
                                   Margin="0,10,0,4" />

                        <ComboBox Style="{StaticResource Osr2ComboBoxStyle}"
                                  ItemContainerStyle="{StaticResource Osr2ComboBoxItemStyle}"
                                  ItemsSource="{Binding AvailableFillModes}"
                                  SelectedItem="{Binding FillMode}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource FillModeDisplay}}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <!-- Sync with Stroke checkbox -->
                        <CheckBox Style="{StaticResource Osr2CheckBoxStyle}"
                                  Content="Sync with Stroke"
                                  IsChecked="{Binding SyncWithStroke}"
                                  IsEnabled="{Binding IsSyncEditable}"
                                  Visibility="{Binding ShowSyncToggle, Converter={StaticResource BoolToVisibility}}"
                                  Margin="0,6,0,0" />

                        <!-- Fill Speed slider (conditional) -->
                        <StackPanel Visibility="{Binding ShowFillSpeedSlider, Converter={StaticResource BoolToVisibility}}"
                                    Margin="0,6,0,0">
                            <TextBlock Text="Speed"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontFamily="Segoe UI" FontSize="11"
                                       Margin="0,0,0,4" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="50" />
                                </Grid.ColumnDefinitions>
                                <Slider Grid.Column="0"
                                        Style="{StaticResource Osr2SliderStyle}"
                                        Minimum="0.1" Maximum="3.0"
                                        SmallChange="0.1" LargeChange="0.5"
                                        Value="{Binding FillSpeedHz}"
                                        VerticalAlignment="Center" />
                                <TextBlock Grid.Column="1"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontFamily="Segoe UI" FontSize="11"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center">
                                <TextBlock.Text>
                                    <Binding Path="FillSpeedHz" StringFormat="{}{0:0.0} Hz" />
                                </TextBlock.Text>
                            </TextBlock>
                        </Grid>
                    </StackPanel>
                    </StackPanel>

                    <!-- ── 3. Script Section ─────────────────── -->
                    <TextBlock Text="Script"
                               Foreground="White"
                               FontFamily="Segoe UI" FontSize="12" FontWeight="SemiBold"
                               Margin="0,10,0,4" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="{Binding ScriptDisplayName}"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontFamily="Segoe UI" FontSize="12"
                                   VerticalAlignment="Center"
                                   TextTrimming="CharacterEllipsis"
                                   ToolTip="{Binding ScriptFileName}" />

                        <Button Grid.Column="1"
                                Content="Open"
                                Style="{StaticResource Osr2SmallButtonStyle}"
                                Command="{Binding OpenScriptCommand}"
                                Margin="8,0,0,0"
                                VerticalAlignment="Center" />
                    </Grid>

                    <!-- ── 4. Position Offset (L0, R0, R1, R2) ── -->
                    <StackPanel Visibility="{Binding ShowPositionOffset, Converter={StaticResource BoolToVisibility}}">
                        <TextBlock Text="Position Offset"
                                   Foreground="White"
                                   FontFamily="Segoe UI" FontSize="12" FontWeight="SemiBold"
                                   Margin="0,0,0,4" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="50" />
                            </Grid.ColumnDefinitions>
                            <Slider Grid.Column="0"
                                    Style="{StaticResource Osr2SliderStyle}"
                                    Minimum="{Binding PositionOffsetMin}"
                                    Maximum="{Binding PositionOffsetMax}"
                                    SmallChange="1" LargeChange="5"
                                    Value="{Binding PositionOffset}"
                                    VerticalAlignment="Center" />
                            <TextBlock Grid.Column="1"
                                       Text="{Binding PositionOffsetLabel}"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontFamily="Segoe UI" FontSize="11"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center" />
                        </Grid>

                        <!-- Divider after offset -->
                        <Border Style="{StaticResource DividerStyle}" />
                    </StackPanel>

                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
