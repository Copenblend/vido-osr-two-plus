<UserControl x:Class="Osr2PlusPlugin.Views.AxisControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:Osr2PlusPlugin.Views"
             xmlns:converters="clr-namespace:Osr2PlusPlugin.Converters">

    <!-- DataContext is expected to be AxisControlViewModel -->

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:BoolToVisibilityConverter x:Key="BoolToVisibility" />
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer Style="{StaticResource Osr2ScrollViewerStyle}"
                  VerticalScrollBarVisibility="Visible"
                  HorizontalScrollBarVisibility="Disabled"
                  Background="#1E1E1E">
        <StackPanel Margin="8">

            <!-- Panel Header -->
            <TextBlock Text="AXIS CONTROL"
                       Style="{StaticResource SectionLabelStyle}"
                       Margin="0,4,0,8" />

            <!-- Axis Cards -->
            <ItemsControl ItemsSource="{Binding AxisCards}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <views:AxisCardView Margin="0,3" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!-- Test Button -->
            <Button Content="{Binding TestButtonText}"
                    Command="{Binding TestCommand}"
                    IsEnabled="{Binding IsTestEnabled}"
                    HorizontalAlignment="Stretch"
                    ToolTipService.ShowOnDisabled="True"
                    Margin="0,10,0,4">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource Osr2TestButtonStyle}">
                        <Style.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="ToolTip" Value="Connect device to test" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

        </StackPanel>
    </ScrollViewer>
</UserControl>
